export ZSHDIR="$HOME/.config/zsh"

# Fix terminal compatibility for SSH sessions from Ghostty
if [[ -n "$SSH_CONNECTION" && "$TERM" == "xterm-ghostty" ]]; then
  export TERM=xterm-256color
fi

WORDCHARS=''

setopt hist_ignore_space hist_ignore_dups hist_ignore_all_dups auto_cd cd_silent

source $ZSHDIR/zshfunctions.zsh 
zsh_add_file $ZSHDIR/zshconfig.zsh
zsh_add_file $ZSHDIR/zshbinds.zsh
zsh_add_file $ZSHDIR/aliases.zsh
zsh_add_file $ZSHDIR/zshintegrations.zsh

if [ -z "$SSH_AUTH_SOCK" ]; then
  eval "$(ssh-agent -s)"
  for key in ~/.ssh/id_*; do
    [[ -f "$key" && "$key" != *.pub ]] && ssh-add "$key" 2>/dev/null
  done
fi

export PATH="$HOME/.local/bin:$PATH"
export PATH="$PATH:/home/pa2/.dotnet/tools"
export GPG_TTY=$(tty)
export EDITOR="nvim"

zsh_add_plugin "zsh-users/zsh-autosuggestions"
ZSH_AUTOSUGGEST_STRATEGY=(history completion)

zsh_add_plugin "zsh-users/zsh-syntax-highlighting"
